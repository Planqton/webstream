<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Webstream" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua_dudu</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavActiveColor">@color/darker_aqua_dudu</item>
        <item name="bottomNavInactiveColor">@color/aqua_dudu</item>
        <item name="android:textColorPrimary">@color/aqua_dudu</item>
        <item name="android:textColorSecondary">@color/aqua_dudu</item>
        <item name="colorControlActivated">@color/aqua_dudu</item>
        <item name="preferenceCategoryTitleTextColor">@color/aqua_dudu</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

    </style>
</resources>